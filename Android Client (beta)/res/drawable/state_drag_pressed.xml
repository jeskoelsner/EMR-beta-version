<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
	<item>
		<bitmap android:src="@drawable/button_shadow" android:dither="true"/>
    </item>
	<item android:bottom="2dp" android:left="1dp" android:right="1dp">
		<shape android:shape="rectangle">
			<solid android:color="@color/status_border_red_pressed" /> 
			<padding
                android:left="1dp"
                android:top="0dp"
                android:right="1dp"
                android:bottom="3dp" />
			<corners 
			    android:bottomRightRadius="4dp" 
			    android:bottomLeftRadius="4dp" 
			    android:topLeftRadius="4dp" 
			    android:topRightRadius="4dp"/>
		</shape>
	</item>
	<item android:bottom="2dp" android:left="1dp" android:right="1dp">
		<shape android:shape="rectangle">
			<solid android:color="@color/status_line_red_pressed" /> 
			<padding
                android:left="0dp"
                android:top="1dp"
                android:right="0dp"
                android:bottom="0dp" />
			<corners 
			    android:bottomRightRadius="4dp" 
			    android:bottomLeftRadius="4dp" 
			    android:topLeftRadius="4dp" 
			    android:topRightRadius="4dp"/>
		</shape>
	</item>
	<item android:bottom="2dp" android:left="1dp" android:right="1dp">
		<shape android:shape="rectangle">
			<gradient 
			    android:startColor="@color/status_red_pressed" 
			    android:endColor="@color/status_red_pressed" 
			    android:angle="270"/> 
			<padding
                android:left="23dp"
                android:top="18dp"
                android:right="23dp"
                android:bottom="16dp" />
			<corners 
			    android:bottomRightRadius="4dp" 
			    android:bottomLeftRadius="4dp" 
			    android:topLeftRadius="4dp" 
			    android:topRightRadius="4dp"/> 
		</shape>
	</item>
	<item>
		<bitmap android:src="@drawable/drag_nobs" android:dither="true" android:tileMode="repeat" />
    </item>
</layer-list>