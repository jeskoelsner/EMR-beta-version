<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="EmurgencyTheme" parent="android:Theme">
		<item name="android:windowNoTitle">true</item>
		<item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
	    <item name="android:activityOpenExitAnimation">@android:anim/bounce_interpolator</item>
	    <item name="android:activityCloseEnterAnimation">@android:anim/bounce_interpolator</item>
	    <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
	</style>
	<style name="EmurgencyBlue" parent="@style/EmurgencyTheme">
	    <item name="android:windowBackground">@drawable/background</item>
	</style>
	<style name="EmurgencyTransparent" parent="@style/EmurgencyTheme">
	    <item name="android:windowBackground">@color/transparent</item>
	</style>
</resources>